{
  "server": {
    "name": "gavl-mcp-server",
    "version": "1.0.0",
    "description": "GAVL MCP Server for Claude Desktop",
    "author": "Joshua Hendricks Cole (Corporation of Light)"
  },
  "api": {
    "base_url": "https://api.thegavl.com/v1",
    "timeout": 30,
    "retry_attempts": 3
  },
  "oauth": {
    "authorization_server": "https://auth.thegavl.com",
    "resource_indicator": "https://api.thegavl.com",
    "scopes": [
      "verdicts:read",
      "verdicts:write",
      "precedents:search",
      "evidence:analyze",
      "compliance:check"
    ],
    "token_endpoint": "https://auth.thegavl.com/oauth/token"
  },
  "privacy": {
    "anonymize_by_default": true,
    "require_explicit_consent": true,
    "consent_timeout_seconds": 300,
    "log_anonymized_data": true,
    "data_retention_days": 90
  },
  "security": {
    "encryption_algorithm": "AES-256-GCM",
    "signing_algorithm": "HMAC-SHA256",
    "min_tls_version": "1.3",
    "rate_limit_per_minute": 10
  },
  "cache": {
    "enable_precedent_cache": true,
    "cache_ttl_seconds": 3600,
    "max_cache_size_mb": 100
  },
  "logging": {
    "level": "INFO",
    "format": "json",
    "log_file": "/var/log/gavl-mcp-server.log",
    "rotate_size_mb": 50,
    "rotate_count": 5
  }
}
